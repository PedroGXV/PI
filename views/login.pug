doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  include favicon.pug  
  link(rel='stylesheet' type='text/css' href='styles/form-merge.css')
  title Login

body.with-margin
  a(href='../') Voltar
  div.flex.bg-red.error-div
    p= error || ""
  .loading-div#login-load
    .loading-rotate
    .loading-title
  form.form.flex.direction-column#login-form(action='' method='POST')
    .form-field
      label.field-label(for='email') Email
      input#email.field-input(type='email' name='email')
    .form-field
      label.field-label(for='senha') Senha
      input#pwd.field-input(type='password' name='senha')
    input.btn.btn-big.btn-green.form-btn(type='submit' value='Login')

script(src="pageScripts/loginLoad.js")