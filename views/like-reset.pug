doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  include favicon.pug  
  link(rel='stylesheet' type='text/css' href='styles/form-merge.css')
  title Confirmação

body.with-margin
  a(href='../') Voltar
  div.flex.bg-red
    p= error || ""
  form.form.flex.direction-column(action='reset-like' method='POST')
